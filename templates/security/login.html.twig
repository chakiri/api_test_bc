{% extends 'base.html.twig' %}

{% block title%}Login{% endblock %}

{% block body %}

    <div class="container">
        <h1>Login</h1>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey }}
            </div>
        {% endif %}

        <div class="login-form">
            <form action="" method="post">
                <div class="form-group col-md-6">
                    <input class="form-control" type="email" name="_username" value="{{ lastUsername }}" placeholder="Email..." required>
                </div>
                <div class="form-group col-md-6">
                    <input class="form-control" type="password" name="_password" placeholder="Password..." required>
                </div>
                <button type="submit" class="btn btn-primary">sign in</button>
            </form>
        </div>

    </div>

{% endblock %}